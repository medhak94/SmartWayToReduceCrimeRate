@page
@model SmartEnrollmentFor911.Pages.CrimeSurveys.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CrimeSurvey</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CrimeSurvey.FirstName" class="control-label"></label>
                <input asp-for="CrimeSurvey.FirstName" class="form-control" />
                <span asp-validation-for="CrimeSurvey.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CrimeSurvey.LastName" class="control-label"></label>
                <input asp-for="CrimeSurvey.LastName" class="form-control" />
                <span asp-validation-for="CrimeSurvey.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CrimeSurvey.CityYouLive" class="control-label"></label>
                <input asp-for="CrimeSurvey.CityYouLive" class="form-control" />
                <span asp-validation-for="CrimeSurvey.CityYouLive" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CrimeSurvey.isSafe" /> @Html.DisplayNameFor(model => model.CrimeSurvey.isSafe)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CrimeSurvey.ShiftCity" class="control-label"></label>
                <input asp-for="CrimeSurvey.ShiftCity" class="form-control" />
                <span asp-validation-for="CrimeSurvey.ShiftCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
